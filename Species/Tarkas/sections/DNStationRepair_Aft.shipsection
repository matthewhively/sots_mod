shipsection
{

    model     Species/Tarkas/art/sections/DNStationRepairAft.X
    dam_model Species/Tarkas/art/sections_dam/DNStationRepair_Aft.X

    requires "IND_DSCon"

    section_type  Engine
    section_class dreadnought
    entity_class  "Station"
    design_class  station

    socket_fore     Engine
    dam_socket_fore Engine

    explicit_section true

    health  9000
    mass    100000
    cost    500000
    cpoints 20000
    crew    50

    preview_ofs "-23 -40 9"

    option
    {
        option  IND_PlyAlloy
        option  IND_MagLat
    }

    option 
    {
        option  IND_RefCoat
        option  IND_ImpRfCt
    }

    netforcelimits
    {
        force_forward       0
        force_right         0
        force_up            0

        torque_yaw          0
        torque_pitch        0
        torque_roll         0

        speed               0
        rotspeed            0
    }

    bank
    {
        turretclass standard
        turretsize small

        mount
        {
            node            lightgunnode03
            min_azimuth     -60
            max_azimuth     60
            min_inclination -20
            max_inclination 90
        }

        mount
        {
            node            lightgunnode04
            min_azimuth     -60
            max_azimuth     60
            min_inclination -20
            max_inclination 90
        }
    }

    bank
    {
        turretclass standard
        turretsize Medium

        mount
        {
            node            MediumGunNode06
            min_azimuth     -90
            max_azimuth     90
            min_inclination -10
            max_inclination 90
        }

        mount
        {
            node            MediumGunNode07
            min_azimuth     -90
            max_azimuth     90
            min_inclination -10
            max_inclination 90
        }
    }

