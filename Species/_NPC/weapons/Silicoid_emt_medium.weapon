weapon
{
    hidden          1                       // not selectable by user

    name            @WEAPON_SILICOID_EMT_MEDIUM
    weaponclass     emitter
    weaponfamily    emitter
    model1          "Species/_NPC/art/weapons/DefenceBarrel.X"
    turretmodel1    "Species/_NPC/art/weapons/DefenceTurret.X"
    turretsize      medium
    turretclass     standard

    requires    WEP_Emitr
    hpbonus     80
    cost        1000

    burst_volleys   1
    volley_period   .2
    volley_duration .75
    recharge_time   10

    muzzle_effect   effects/Emitter_muzzle.effect
    muzzle_sound    Sounds/Weapons/emt_light_muzzle.wav
    muzzle_sound_minrange   100

    icon_file   GUI/WeaponIcons.tga
    icon_rect   "0 192 32 32"

    fc_requires_los             true
    fc_requires_inrange         true
    fc_requires_enemycolony     false
    fc_manual_target            false
    fc_manual_toggle            false
    fc_manual_launch            false
    fc_controllable             true
    fc_holdsfire                true
    blindfire                   false

    range         350
    range_planet 1050

    chainlightning
    {
        impact_sound    Sounds/Weapons/emt_light_impact.wav
        impact_sound_minrange   75
        effect      effects/Emitter_Bullet.effect
        dam         140
        branches    4

        dam_pop     10000
        dam_infra   .0001
        dam_terra   0
    }

    dam_est     100

    rating_frate    5
    rating_dam      5
    rating_acc      10
    rating_range    4
