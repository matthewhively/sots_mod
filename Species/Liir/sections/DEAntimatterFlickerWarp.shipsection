        mount
        {
            node            LightGunNode02
            min_azimuth     -90 
            max_azimuth     70
            min_inclination -5
            max_inclination 90
        }
    }

    bank
    {
        turretclass standard
        turretsize medium

        mount
        {
            node            mediumGunNode01
            min_azimuth     -85
            max_azimuth     85
            min_inclination -15
            max_inclination 90
        }
    }
