    section_type    engine
    section_class   Destroyer
    engine_techera  antimatter

    health  900
    mass    1800
    cost    25000
    cpoints 800

    ftlspeed 14
    range    22

    option
    {
        option  IND_PlyAlloy
        option  IND_MagLat
        option  IND_QrkRes
        option  IND_AdmAly
        option  IND_StlthArm
    }

