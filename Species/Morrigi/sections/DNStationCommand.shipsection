shipsection
{

    model     Species/morrigi/art/sections/DNStationCommand.x
    dam_model Species/morrigi/art/sections_dam/DNStationCommand.x

    requires "IND_OrbCom"

    section_type  mission
    section_class dreadnought
    entity_class  "Station"
    design_class  station

    socket_fore     fore
    socket_aft      aft
    dam_socket_aft  aft
    dam_socket_fore fore

    health  8500
    mass    100000
    cost    600000
    cpoints 17000
    crew    100

    station command
    command_quota 46

    explicit_command_section "DNStationCommand_Fore"
    explicit_engine_section  "DNStationCommand_Aft"

    preview_ofs "60 -340 9"

    section_lod_type 1  // 1 for guns visible further, 0 for regular distance
    view_dist 12000

    option
    {
        option  IND_PlyAlloy
        option  IND_MagLat
        option  IND_QrkRes
    }

    option 
    {
        option  IND_RefCoat
        option  IND_ImpRfCt
    }

    netforcelimits
    {
        force_forward       1e+9
        force_right         1e+9
        force_up            1e+9

        torque_yaw          1e+9
        torque_pitch        1e+9
        torque_roll         1e+9

        speed               30
        rotspeed            6
    }

    anim
    {
        name        "combatready"
        event       "CombatReady"
        start_frame "0"
        speed_scale "2"
        loop        "1"
    }

    anim
    {
        name        "combatready"
        event       "CombatRest"
        start_frame "end"
        speed_scale "-2"
        loop        "1"
    }

    bank
    {
        turretclass standard
        turretsize small

        mount
        {
            node            lightGunNode01
            min_azimuth     -60
            max_azimuth     60
            min_inclination -15
            max_inclination 90
